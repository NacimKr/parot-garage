{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<div style="width:100%; position:relative">
    <img src="{{asset('img/photo-garage-3.png')}}" style="width:100%; height:500px; object-fit:cover" alt="">
    <div style="position:absolute; top:30%; right:10%;">
        <h1 style="text-align:right;" class="text-light">Connectez-vous à votre espace personnel</h1>
        <p style="text-align:right;" class="text-light">Si vous n’avez pas de compte ? <br/>
Veuillez contacter le responsable du garage</p>
    </div>
</div>
<div class="container my-5 w-50">
    <form method="post">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <div class="mb-3">
            <label for="inputEmail">Email</label>
            <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
        </div>
        <div class="mb-3">
            <label for="inputPassword">Password</label>
            <input type="text" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
        </div>

        <input type="hidden" name="_csrf_token"
            value="{{ csrf_token('authenticate') }}"
        >

        {#
            Uncomment this section and add a remember_me option below your firewall to activate 
            remember me functionality. See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
        #}

        <button class="btn btn-primary" type="submit">
            Sign in
        </button>
    </form>
</div>
{% endblock %}
