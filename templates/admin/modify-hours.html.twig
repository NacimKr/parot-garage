{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <div style="width:100%; position:relative">
        <img src="{{asset('img/photo-garage-3.png')}}" style="width:100%; height:550px; object-fit:cover" alt="">
        <div style="position:absolute; top:30%; right:10%;">
            <h1 style="text-align:right;" class="text-light">Modifier les horaires d'ouvertures</h1>
        </div>
    </div>
    <table class="table">
            <thead class="table-secondary">
                <tr>
                <th scope="col"></th>
                <th scope="col">Matin</th>
                <th scope="col">Matin</th>
                <th scope="col">Après-midi</th>
                <th scope="col">Après-midi</th>
                <th scope="col">Actions</th>
                </tr>
            </thead>
        {% for hour in hours %}
                <tbody>
                    <tr>
                        <th scope="row">{{hour.days.name}}</th>
                        <td>{{hour.matinopen}}</td>
                        <td>{{hour.matinclose}}</td>
                        <td>{{hour.apremopen}}</td>
                        <td>{{hour.apremclose}}</td>
                        
                        {% if hour.days.name == "Dimanche" %}
                            <td>
                                <a href={{path('app_modify_hours_2', {id:hour.id})}} class="btn btn-warning disabled">Modifier</a>
                            </td>
                        {% else %}
                            <td>
                                <a href={{path('app_modify_hours_2', {id:hour.id})}} class="btn btn-warning">Modifier</a>
                            </td>
                        {% endif %}
                    </tr>
                </tbody>
        {% endfor %}
    </table>
{% endblock %}