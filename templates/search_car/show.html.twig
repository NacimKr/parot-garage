{% extends 'base.html.twig' %}

{% block title %}Garage Parot{% endblock %}

{% block body %}
{% include "./component/_header.html.twig" %}

 <div class="card mx-auto my-5" style="width: 38rem;">
        {% if car.image != "" %}
            <img src="{{ asset("img-cars/"~car.image) }}" class="card-img-top" alt="..." />
        {% else %}
            <img src="{{ asset("img-cars/no-image-available.jpg") }}" class="card-img-top" alt="..." />
        {% endif %}
        <div class="card-body shadow">
            <h5 class="card-title">{{ car.marque }}</h5>
            <p class="card-text">Prix : {{car.prix}}€</p>
            <p>Kilométrage : {{car.kilometrage}}km/h</p>
            <p>Année : {{car.annee}}</p>
            <p>Carburant : {{car.carburant}}</p>
            <p>Boite {{car.transmission}}</p>
            <p>Nombre de siège : {{car.nbrSiege}}</p>
        </div>
{% endblock %}