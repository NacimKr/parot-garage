{% for car in cars %}
    <div class="card" style="width: 18rem;">
        {% if car.image != "" %}
            <img src="{{ asset("img-cars/"~car.image) }}" class="card-img-top" alt="..." />
        {% else %}
            <img src="{{ asset("img-cars/no-image-available.jpg") }}" class="card-img-top" alt="..." />
        {% endif %}
        <div class="card-body shadow">
            <h5 class="card-title">{{ car.marque }}</h5>
            <p class="card-text">{{car.prix}}€</p>
            <p>{{car.kilometrage}}km/h</p>
            <p>{{car.annee}}</p>
            
            {% if is_granted('ROLE_EMPLOYEE') %}
                {% if car.isActive %}
                    <a href="{{path('app_change_visibility', {id:car.id})}}" class="btn btn-primary btn-sm" data-index={{car.id}} id="isActive" data-isActive=true>Active</a>
                {% else%}
                    <a href="{{path('app_change_visibility', {id:car.id})}}"  class="btn btn-danger btn-sm" data-index={{car.id}} id="isActive" data-isActive=false>Disabled</a>
                {% endif %}
                <div class="d-block mt-2">
                    <a class="btn btn-warning" href="{{path('app_modify_cars', {id:car.id})}}">Modifer</a>
                    <a class="btn btn-danger" href="{{path('app_delete_cars', {id:car.id})}}">Supprimer</a>
                </div>                                
            {% endif %}
                <a id="modal" 
                    class="btn btn-warning mt-2" 
                    href="{{path('app_search_car_id', {id:car.id})}}"
                    data-index="{{car.id}}"
                >
                    Pour plus d'infos
                </a>
        
        </div>
    </div>
    {% else %}
    <div class="text-center">
        <h1>Aucun vehicule ne correpond à votre recherche</h1>
    </div>
{% endfor %}
