<form action="{{ path('app_change_visibility', {"id":car.id}) }}" method="POST">                 
    {% if car.isActive %}
        <button type="submit" class="btn btn-primary" data-index={{car.id}} id="isActive" data-isActive=true>Active</button>
    {% else%}
        <button type="submit" class="btn btn-danger" data-index={{car.id}} id="isActive" data-isActive=false>Disabled</button>
    {% endif %}
</form>