{% extends 'base.html.twig' %}

{% block title %}Garage Parot{% endblock %}

{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <h1>Admin</h1>
        <div>
            <div>
                <a href="{{path('app_add_cars')}}">Ajouter un véhicules d’occasion</a>
            </div>
            <div>
                <a href="{{path('app_add_services')}}">Ajouter un services à proposer</a>
            </div>
            <div>
                <a href="{{path('app_manage_avis')}}">Gérer les avis</a>
            </div>
            <div>
                <a href="{{path('app_create_promotion')}}">Créer une promotion</a>
            </div>
            <div>
                <a href="{{path('app_modify_hours')}}">Modifier les horaires d’ouvertures</a>
            </div>
            <div>
                <a href="{{path('app_create_account')}}">Créer un compte</a>
            </div>
        </div>

    {% elseif is_granted('ROLE_EMPLOYEE') %}
        <h1>Employee</h1>
        {% include "./component/_search_data.html.twig" %}
        
        <div class="d-flex flex-wrap gap-4 justify-content-center" id="content-cars">
            {% include "./component/_search_filter.html.twig" %}
        </div>
    {% else %}
        <div style="width:100%; position:relative">
            <img src="{{asset('img/photo-garage-3.png')}}" style="opacity: 0.5; width:100%; height:500px" alt="">
            <div style="position:absolute; top:30%; right:10%;">
                <h1 style="text-align:right">La qualité au délà de l’excellence <br/>
                Notre objectifs et votre securité routière </h1>
                <a href="{{path('app_contact')}}" class="btn btn-danger float-right">Nous contacter</a>
            </div>
        </div>

        <div>

            <h1 class="text-center my-4">Service et réparation</h1>
            <div class="d-flex justify-content-center gap-3 flex-wrap my-5">
                {% for service in services %}
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{service.nom}}</h5>
                            <p class="card-text">{{service.prix}}€</p>
                            <p>{{service.description}}km/h</p>                    
                        </div>
                    </div>
                {% endfor %}
            </div>

            <div class="d-flex">
                <div style="width:33%; background:#DD4141; height:400px">TEST</div>
                <div style="width:33%; background:#454855; height:400px">TEST</div>
                <div style="width:33%; background:#25272F; height:400px">TEST</div>
            </div>

            <h1 class="text-center my-4">Avis clients</h1>
            <div class="d-flex justify-content-center gap-3 flex-wrap my-5">
                {% for avi in avis %}
                    <div class="card" style="width: 18rem;">
                        <div class="card-body">
                            <h5 class="card-title">{{avi.nom}}</h5>
                            <p class="card-text">{{avi.description}}€</p>
                            {% for i in 1..5 %}
                                {% if i <= avi.note %}
                                    <span class="bg-warning p-1 me-1"></span>      
                                {% else %}              
                                    <span class="bg-dark p-1 me-1"></span>      
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    {% endif %}
{% endblock %}